<div class="row">
    <div class="col-xs-12">

        {{#if isEditable}}
            <div class="dropdown">

                <button id="fx-data-management-copy-dsd" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                        title="{{copyAlt}}"
                        class="pull-left btn btn-floating fx-background-color-primary-color">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>

                <div class="dropdown-menu fx-padding" aria-labelledby="dLabel">
                    <h6>{{copyTitle}}</h6>
                    <div data-role="form"></div>
                    <button data-role="copy" type="button"
                            title="{{copyAlt}}"
                            class="btn btn-floating fx-background-color-primary-color pull-right"
                            aria-label="Left Align">
                        <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    </button>
                </div>
            </div>

        {{/if}}

        <button data-role="save" type="button" class="pull-right btn btn-floating fx-background-color-primary-color"
                title="{{saveBtn}}"
                aria-label="Left Align">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        </button>
    </div>
</div>

<hr>
<div class="row">
    <div class="col-xs-12">
        <div data-role="dsd"></div>
    </div>
</div>